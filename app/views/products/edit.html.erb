<div class="font-effect-putting-green">
  <h1>Edit Product</h1>

<%= form_for(@product, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>
  <%= f.label :category %>
</div>  
  <%= f.select(:category_id) do %>
    <%= Category.all.each do |c| %>
    <%= content_tag(:option, c.name, value: c.id) %>
    <% end %>
  <% end %>
  <div class="form-group">
    <div class="col-sm-10">
    <%= f.submit "Update", class: "btn-success" %>
    </div>
  </div>
<% end %>
<%= link_to "Back", "/products/#{@product.id}" %>